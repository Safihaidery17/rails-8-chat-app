<%= turbo_frame_tag :new_message do %>
  <div class="mx-auto md:w-2/3 w-full">
    <h1 class="font-bold text-4xl">New message</h1>

    <%= render "form", message: @message, chat: @chat %>

    <%= link_to "Back to messages", chat_messages_path(@chat), class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
<% end %>